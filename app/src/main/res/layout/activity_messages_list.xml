<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/main_container"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<LinearLayout
		android:id="@+id/bubble"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_margin="6dp">

		<com.procsec.fast.view.CircleImageView
			android:id="@+id/avatar"
			android:layout_width="32dp"
			android:layout_height="32dp"
			android:src="@drawable/camera_200"
			android:layout_marginRight="4dp"/>

		<LinearLayout
			android:id="@+id/body_container"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:orientation="vertical">

			<LinearLayout
				android:orientation="vertical"
				android:padding="7dp"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content">

				<TextView
					android:id="@+id/body"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:autoLink="web"
					android:gravity="left|center_vertical"
					android:linksClickable="true"
					tools:text="СообщенeqfqOFNwefnqo;FENOwjfnowjfnowjenfojwfeNOwpjenfojpwFENOwfnowjNFowfnwojFNWopjenfpwoenfowjFNWjofnwojFNWOJNFOWJFNOwjfnowjFNwnfие"
					android:textSize="16sp"
					android:layout_gravity="left|start"
					android:layout_marginBottom="4dp"
					android:textColor="#505050"/>

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="right|center_vertical"
					android:id="@+id/date"
					android:textSize="10sp"
					android:text="08:00"
					android:layout_gravity="bottom|right"/>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/attach_container"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:visibility="gone">

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>

